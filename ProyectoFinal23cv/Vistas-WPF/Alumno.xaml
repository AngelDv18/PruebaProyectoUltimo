<Window x:Class="ProyectoFinal23cv.Vistas_WPF.Alumno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinal23cv.Vistas_WPF"
        mc:Ignorable="d"
        Title="Alumno" Height="900" Width="1760">
    <Grid>
        <Label Content="Welcome Student" HorizontalAlignment="Left" VerticalAlignment="Top" Height="87" Width="478" FontSize="60" Margin="469,18,0,0"/>
        <Label Content="Carrera" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Margin="21,65,0,0" Width="90" FontSize="20"/>
        <Label Content="NombreAlumno" HorizontalAlignment="Left" Height="38" Margin="18,161,0,0" VerticalAlignment="Top" Width="154" FontSize="20"/>
        <TextBox x:Name="txtNombreAlumno" HorizontalAlignment="Left" Height="39" Margin="18,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <Label Content="ApellidoPaterno" HorizontalAlignment="Left" Height="38" Margin="21,251,0,0" VerticalAlignment="Top" Width="154" FontSize="20"/>
        <TextBox x:Name="txtApellidoP" HorizontalAlignment="Left" Height="39" Margin="21,294,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <Label Content="ApellidoMaterno" HorizontalAlignment="Left" Height="38" Margin="21,346,0,0" VerticalAlignment="Top" Width="157" FontSize="20"/>
        <TextBox x:Name="txtApellidoM" HorizontalAlignment="Left" Height="39" Margin="21,389,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <Label Content="FechaqueRegistro" HorizontalAlignment="Left" Height="33" Margin="30,467,0,0" VerticalAlignment="Top" Width="165" FontSize="20"/>
        <TextBox x:Name="txtFechaqueRegistro" HorizontalAlignment="Left" Height="37" Margin="34,531,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <TextBox x:Name="txtPkAlumno" HorizontalAlignment="Left" Height="37" Margin="213,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="68" IsEnabled="False" FontSize="20"/>
        <Label Content="Papel" HorizontalAlignment="Left" Height="33" Margin="54,590,0,0" VerticalAlignment="Top" Width="94" FontSize="16"/>
        <ComboBox x:Name="SelectPapel" DisplayMemberPath="Nombre" SelectedValuePath="PKPapel" HorizontalAlignment="Left" Margin="43,633,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAddAlumno" Content="Save" HorizontalAlignment="Left" Height="42" Margin="43,699,0,0" VerticalAlignment="Top" Width="132" FontSize="24" FontWeight="Bold" Background="#FFFFE700" Click="btnAddAlumno_Click" />
        <DataGrid x:Name="UserTableAlu" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" ColumnWidth="*" IsSynchronizedWithCurrentItem="True" Margin="213,136,13,90" FontSize="14" FontWeight="Bold"  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PkAlumno}"/>

                <DataGridTextColumn Header="NombreAlumno" Binding="{Binding NombreAlumno}"/>
                <DataGridTextColumn Header="ApellidoPaterno" Binding="{Binding ApellidoP}"/>
                <DataGridTextColumn Header="ApellidoMaterno" Binding="{Binding ApellidoM}"/>
                <DataGridTextColumn Header="FechaqueRegistro" Binding="{Binding Fechaqueregistro}"/>
                <DataGridTextColumn Header="Papel" Binding="{Binding Papel.Nombre}"/>
                <DataGridTemplateColumn Header="EditAlumn">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="EditItemAlu" Content="Edit" Click="EditItemAlu_Click" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="DeleteAlus">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="DeleteItemAlus" Content="Delete" Click="DeleteItemAlus_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

                 
        </DataGrid>
        <Button Content="" HorizontalAlignment="Left" Height="31" Margin="8,2,0,0" VerticalAlignment="Top" Width="51" BorderBrush="#FFF7F7F7" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Vistas-WPF/Return.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
